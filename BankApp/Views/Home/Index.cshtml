
@model List<BankApp.Models.Customer>;

@{
    ViewData["Title"] = "Index";
}

<h2>BankAppMaq</h2>

<a asp-controller="Bank" asp-action="Index">Go to Contribution/Withdrawl</a> &nbsp; <a asp-controller="Transfer" asp-action="Index">Transfer</a>

<ul>
    @foreach (var item in Model)
    {
        <li>
            <h3>Customer number: @item.CustomerNumber, Customer name: @item.Name</h3>
            <ul>
                @foreach (var acc in item.Accounts)
                {
                    <li>
                        <p>Account number: @acc.AccountNumber, Balance: @acc.Balance</p>
                    </li>
                }
            </ul>
        </li>
    }
</ul>


